---
import CardSection from "./CardSection.astro"
import Card from "./Card.astro"
---

<CardSection title="SVG Elements" description="You can use SVG elements to draw basic shapes.">
    <Card title="Line Element" link="/editor/line">
        <svg viewBox="0 0 450 450">
            <line x1="100"y1="100"x2="350"y2="350" class="cardElement" />
            <circle cx="100" cy="100" r="20" class="cardHelperDrag" />
            <circle cx="350" cy="350" r="20" class="cardHelperDrag" />
        </svg>
    </Card>

    <Card title="Circle Element" link="/editor/circle">
        <svg viewBox="0 0 450 450">
            <circle cx="225" cy="225" r="150" class="cardElement" />
            <circle cx="225" cy="225" r="20" class="cardHelperDrag" />
            <circle cx="375" cy="225" r="20" class="cardHelperDrag" />
        </svg>
    </Card>

    <Card title="Rectangle Element" link="/editor/rect">
        <svg viewBox="0 0 450 450">
            <rect x="75" y="125" width="300" height="200" class="cardElement" />
            <circle cx="75" cy="125" r="20" class="cardHelperDrag" />
            <circle cx="375" cy="225" r="20" class="cardHelperDrag"/>
            <circle cx="225" cy="325" r="20" class="cardHelperDrag"/>
        </svg>
    </Card>

    <Card title="Polyline Element" link="/editor/polyline">
        <svg viewBox="0 0 450 450">
            <polyline 
                points="100,360 100,200 225,80 350,200 350,360" 
                class="cardElement"
            />
            <circle cx="100" cy="360" r="20" class="cardHelperDrag" />
            <circle cx="100" cy="200" r="20" class="cardHelperDrag" />
            <circle cx="225" cy="80" r="20" class="cardHelperDrag" />
            <circle cx="350" cy="200" r="20" class="cardHelperDrag" />
            <circle cx="350" cy="360" r="20" class="cardHelperDrag" />
        </svg>
    </Card>

    <Card title="Polygon Element" link="/editor/polygon">
        <svg viewBox="0 0 450 450">
            <polygon 
                points="100,360 100,200 225,80 350,200 350,360" 
                class="cardElement"
            />
            <circle cx="100" cy="360" r="20" class="cardHelperDrag" />
            <circle cx="100" cy="200" r="20" class="cardHelperDrag" />
            <circle cx="225" cy="80" r="20" class="cardHelperDrag" />
            <circle cx="350" cy="200" r="20" class="cardHelperDrag" />
            <circle cx="350" cy="360" r="20" class="cardHelperDrag" />
        </svg>
    </Card>

    <Card title="Text Element" link="/editor/text">
        <svg viewBox="0 0 450 450">
            <text x="120" y="350" font-size="350" class="cardElement">S</text>
            <circle cx="120" cy="350" r="20" class="cardHelperDrag" />
        </svg>
    </Card>
</Segments>