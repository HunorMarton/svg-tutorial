---
import Slide from "./Slide.astro";
import Clock from "../../components/markdown/examples/Clock.astro";
---

<Slide>
  <div class="slide-clock" data-track-id="slide-clock"><Clock /><slot /></div>
</Slide>

<style>
  .slide-clock {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
    background-color: #7b0828;
  }
</style>
