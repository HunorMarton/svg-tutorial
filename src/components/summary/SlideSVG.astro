---
import Slide from "./Slide.astro";
---

<Slide slides={2}>
  <div class="slide-svg"><slot /></div>
</Slide>

<style is:global lang="scss">
  $container: 3;
  $slides: 2;

  .slide-svg {
    display: flex;
    gap: 50px;
  }

  .slide-svg .markdown-example {
    display: flex;
    flex-direction: column;
  }

  .slide-svg .markdown-example pre {
    width: 400px;
  }

  .slide-svg .markdown-example:nth-of-type(1) pre {
    position: relative;
    top: 50px;
  }

  @import "animation";

  .slide-svg .markdown-example {
    @include animation(left, [230px, -230px]);
  }
</style>
