---
import Slide from "./Slide.astro";

export interface Props {
  start: number;
}

const { start } = Astro.props as Props;
---

<Slide>
  <div class="slide-curve"><slot /></div>
</Slide>

<style>
  .slide-curve {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;

    pre {
      width: 100%;
      border-radius: 0;
      padding-bottom: 7em;
      display: flex;
      justify-content: center;
    }
  }
</style>
