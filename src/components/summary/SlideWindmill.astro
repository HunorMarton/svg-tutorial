---
import Slide from "./Slide.astro";
---

<Slide container="windmill" slides={3}>
  <div class="slide-windmill" data-track-id="slide-windmill"><slot /></div>
</Slide>

<style is:global lang="scss">
  $container: "windmill";
  $slides: 3;

  @import "animation";

  .slide-windmill .markdown-example svg {
    @include animation(left, [275px, 0]);

    border-color: transparent;
    block-size: fit-content;
  }

  // HTML Code
  .slide-windmill .markdown-example > *:has([data-language="html"]) {
    @include animation(opacity, [0, 1, 0]);
    top: top(7.5);
  }

  // CSS Code
  .slide-windmill .markdown-example > *:has([data-language="css"]) {
    @include animations(
      (
        opacity: 0 0 1,
        pointer-events: none none auto,
      )
    );
    top: top(-9);
  }
</style>
