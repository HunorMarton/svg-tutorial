---
import Coordiante from "./Coordinate.astro";

export interface Props {
  cx: string;
  cy: string;
  helper?: boolean;
  [key: string]: any;
}

const { cx, cy, ...props } = Astro.props as Props;

const pointerEvents = props.helper ? "none" : "auto";
---

<g class="element">
  <circle cx={cx} cy={cy} {...props}></circle>
  <g class="coordinates">
    <Coordiante x={cx} y={cy} />
  </g>
</g>

<style define:vars={{ pointerEvents }}>
  .element {
    pointer-events: var(--pointerEvents, auto);
  }
</style>
