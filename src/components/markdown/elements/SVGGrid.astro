---
export interface Props {
  minX: number;
  minY: number;
  viewBoxWidth: number;
  viewBoxHeight: number;
}

const { minX, minY, viewBoxWidth, viewBoxHeight } = Astro.props as Props;

const increment = 20;
---

{
  Array.from({ length: viewBoxWidth / increment }, (_, i) => (
    <line
      class="grid-line"
      x1={minX + i * increment}
      y1={minY}
      x2={minX + i * increment}
      y2="100%"
    />
  ))
}
{
  Array.from({ length: viewBoxHeight / increment }, (_, i) => (
    <line
      class="grid-line"
      x1={minX}
      y1={minY + i * increment}
      x2="100%"
      y2={minY + i * increment}
    />
  ))
}

<style is:global>
  svg .grid-line {
    stroke-width: 0;
  }

  svg:hover .grid-line {
    stroke: lightgray;
    stroke-width: 0.5;
  }
</style>
