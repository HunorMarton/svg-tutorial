---
import Coordiante from "./Coordinate.astro";

export interface Props {
  points: string;
  [key: string]: string;
}

const { points, ...props } = Astro.props as Props;
const coordinates = points.split(" ").map((point) => point.split(","));
---

<g class="element">
  <polygon points={points} {...props}></polygon>
  <g class="coordinates">
    {coordinates.map(([x, y]) => <Coordiante x={x} y={y} />)}
  </g>
</g>
