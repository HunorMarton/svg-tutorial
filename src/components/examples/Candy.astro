---
export interface Props {
  title?: string;
  size: number;
}

const { title, size } = Astro.props as Props;
---

<svg width={200 * size} height={400 * size} viewBox="-100 -200 200 400">
  <title>{title}</title>
  <path
    class="body"
    d="
        M 50 120
        L 50 -80
        A 50 50 0 0 0 -50 -80"
    stroke="#cd803d"
    stroke-width="45"></path>

  <path
    class="body"
    d="
        M 50 120
        L 50 -80
        A 50 50 0 0 0 -50 -80"
    stroke="white"
    stroke-width="40"></path>

  <line class="green-mark" x1="-35" y1="-90" x2="-60" y2="-100"></line>
  <line class="red-mark" x1="-15" y1="-115" x2="-25" y2="-135"></line>
  <line class="green-mark" x1="20" y1="-110" x2="35" y2="-130"></line>
  <line class="red-mark" x1="40" y1="-60" x2="60" y2="-80"></line>
  <line class="green-mark" x1="40" y1="-10" x2="60" y2="-30"></line>
  <line class="red-mark" x1="40" y1="40" x2="60" y2="20"></line>
  <line class="green-mark" x1="40" y1="90" x2="60" y2="70"></line>
</svg>

<style>
  .body {
    stroke-linecap: round;
    fill: none;
  }

  .red-mark {
    stroke: #d1495b;
    stroke-width: 2.5px;
  }

  .green-mark {
    stroke: #234236;
    stroke-width: 2.5px;
  }
</style>
