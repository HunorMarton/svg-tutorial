---
export interface Props {
  x: number;
  y: number;
  big?: boolean;
  fast?: boolean;
  opaque?: boolean;
}

const {
  x,
  y,
  big = false,
  fast = false,
  opaque = false,
} = Astro.props as Props;
---

<circle
  cx={x}
  cy={y}
  r={big ? 5 : 3}
  fill="white"
  class:list={[
    "snowflake",
    {
      big: big,
      fast: fast,
      opaque: opaque,
    },
  ]}></circle>

<style is:global>
  .snowflake {
    animation-duration: 5s;
    animation-name: snowing;
    animation-iteration-count: infinite;
    animation-timing-function: linear;

    .opaque {
      opacity: 0.7;
    }

    .fast {
      animation-duration: 3s;
    }
  }

  @keyframes snowing {
    from {
      transform: translate(0, -100px);
    }
    to {
      transform: translate(0, 100px);
    }
  }
</style>
