---
export interface Props {
  title?: string;
  size: number;
}

const { title, size } = Astro.props as Props;
---

<svg width={200 * size} height={200 * size} viewBox="-100 -100 200 200">
  <title>{title}</title>
  <path
    id="branch"
    d="
          M 0 0 L 0 -90
          M 0 -20 L 20 -34
          M 0 -20 L -20 -34
          M 0 -40 L 20 -54
          M 0 -40 L -20 -54
          M 0 -60 L 20 -74
          M 0 -60 L -20 -74"
    stroke="#E5C39C"
    stroke-width="5"></path>

  <use href="#branch" transform="rotate(60)"></use>
  <use href="#branch" transform="rotate(120)"></use>
  <use href="#branch" transform="rotate(180)"></use>
  <use href="#branch" transform="rotate(240)"></use>
  <use href="#branch" transform="rotate(300)"></use>
</svg>
