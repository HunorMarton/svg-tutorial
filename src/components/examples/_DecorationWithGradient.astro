---
export interface Props {
  title?: string;
  size: number;
}

const { title, size } = Astro.props as Props;
---

<svg width={200 * size} height={200 * size} viewBox="-100 -100 200 200">
  <title>{title}</title>
  <defs>
    <radialGradient id="shine" cx="0.25" cy="0.25" r="0.35">
      <stop offset="0%" stop-color="#e3a8b0"></stop>
      <stop offset="100%" stop-color="#D1495B"></stop>
    </radialGradient>
  </defs>

  <circle cx="0" cy="20" r="70" fill="url(#shine)"></circle>
  <circle cx="0" cy="-75" r="12" fill="none" stroke="#F79257" stroke-width="2"
  ></circle>
  <rect x="-17.5" y="-65" width="35" height="20" fill="#F79257"></rect>
</svg>
