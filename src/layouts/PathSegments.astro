---
import Head from "./Head.astro";
import Header from "../svg-curves/components/Header.astro";
import "./SVGCurves.css";

export interface Props {
  lesson: string;
}

const { lesson } = Astro.props as Props;

const headerItems = [{title: 'Arc', link: '/arc'}, { title: 'Cubic Bézier', link: '/cubic-bezier'}, { title: 'Quadratic Bézier', link: '/quadratic-bezier'}];
---

<!doctype html>
<html lang="en">
  <Head
    title="SVG Curves - SVG Tutorial"
    description="Interactive SVG tutorial for path segments"
    image={"https://svg-tutorial.com/image.png"}
  />
  <body>
    <Header items={headerItems} lesson={lesson} />

    <noscript>You need to enable JavaScript to run this app.</noscript>
    <slot />
  </body>
</html>

<style>
  @import url("https://fonts.googleapis.com/css?family=Roboto");

  html {
    font-family: "Roboto", sans-serif;
  }

  body {
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    height: 100vh;
  }
</style>
