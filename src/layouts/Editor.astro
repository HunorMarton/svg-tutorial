---
import Head from "./Head.astro";
import Header from "../svg-curves/components/Header.astro";
import EditorDescription from "./EditorDescription.astro";
import "./SVGCurves.css";

export interface Props {
  title: string;
  lesson: string;
}

const { title, lesson } = Astro.props as Props;

const headerItems = [{title: 'Line', link: '/editor/line'}, { title: 'Circle', link: '/editor/circle'}, { title: 'Rectangle', link: '/editor/rect'}];
---

<!doctype html>
<html lang="en">
  <Head
    title={`${title} - SVG Tutorial`}
    description="Interactive SVG editor for basic shapes"
    image={"https://svg-tutorial.com/image.png"}
  />
  <body>
    <Header items={headerItems} lesson={lesson} />
    <noscript>You need to enable JavaScript to run this app.</noscript>
    <div class="editor-container">
      <slot />
      <EditorDescription>
        <slot name="description" />
      </EditorDescription>
    </div>
  </body>
</html>

<style>
  @import url("https://fonts.googleapis.com/css?family=Roboto");

  html {
    font-family: "Roboto", sans-serif;
  }

  body {
    margin: 0;
    padding: 0;

    display: flex;
    flex-direction: column;
    height: 100vh;
    background-color: var(--background-color);
  }

  .editor-container {
    display: flex;
    flex-direction: row;
    overflow-y: hidden;
    height: 100%;
  }
</style>