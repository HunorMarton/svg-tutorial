---
import Close from "../components/CloseButton.astro";

export interface Props {
  day: number;
}

const { day } = Astro.props as Props;
---

<div class="popover" transition:name={`day-${day}`}>
  <slot />

  <Close />
</div>

<style>
  .popover {
    position: fixed;
    width: 100%;
    height: 100%;
    background-color: white;
    overflow: hidden;
  }

  @media (min-width: 1200px) {
    .popover {
      width: 1200px;
      height: calc(100% - 30px);
      border-radius: 10px;
    }
  }
</style>
