---
import Close from "../components/common/buttons/CloseButton.astro";

export interface Props {
  transition: string;
}

const { transition } = Astro.props as Props;
---

<div class="popover" transition:name={transition}>
  <div class="layout">
    <slot />
  </div>
  <Close />
</div>

<style>
  .popover {
    position: fixed;
    width: 100%;
    height: 100%;
    background-color: white;
    overflow: hidden;
  }

  @media (min-width: 1200px) {
    .popover {
      width: 1200px;
      height: calc(100% - 30px);
      border-radius: 10px;
    }
  }

  .layout {
    overflow: auto;
    height: 100%;
    max-height: 100%;
  }
</style>
