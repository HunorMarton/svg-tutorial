---
import Content from "../components/home/Advent.astro";

import Head from "../layouts/Head.astro";
import TableOfContents from "../components/home/TableOfContents.astro";
import Footer from "../components/Footer.astro";
import "@fontsource/fredoka-one";

const title = "SVG Tutorial - Learn how to code images in HTML with SVG";
const description =
  "Learn how to create and animate images in HTML with SVG. This advent calendar-themed tutorial covers everything from basic shapes to advanced animations and interactivity. Start your SVG journey today!";

export const prerender = true;
---

<!doctype html>
<html lang="en">
  <Head
    title={title}
    description={description}
    image={"https://svg-tutorial.com/image.png"}
  />

  <body>
    <main>
      <Content />
    </main>

    <div class="things">
      <TableOfContents />
    </div>
    <div class="footer-container" data-track-id="Footer">
      <Footer dark={true} />
    </div>
  </body>
</html>

<style is:global>
  body {
    background-color: #151515;
    margin: 0;
  }

  a,
  a:visited {
    color: inherit;
  }

  * {
    box-sizing: border-box;
  }
</style>

<style>
  .things {
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    padding: 20px 20px 50px 20px;

    font-size: 0.8em;
  }

  .footer-container {
    width: 100%;
    overflow: hidden;
    display: flex;
    justify-content: center;
  }
</style>
