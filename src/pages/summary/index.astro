---
import Summary from "../../layouts/Summary.astro";
import BrowserScrollSupport from "../../components/BrowserScrollSupport.astro";
import SnapContainer from "../../components/summary/SnapContainer.astro";
import Close from "../../components/CloseButton.astro";
import FullScreenButton from "../../components/FullScreenButton.astro";
import { Content } from "./_Content.mdx";
import ShowNote from "../../components/summary/ShowNote.astro";
---

<Summary>
  <BrowserScrollSupport>
    <Fragment slot="fallback">
      <h1>Or</h1>
      <p>Watch this summary as a video on YouTube:</p>
      <iframe
        width="400"
        height="225"
        src="https://www.youtube.com/embed/hZYaSGUbMds?si=sOE6cWBC8IDaOoba"
        title="YouTube video player"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
        allowfullscreen></iframe>
    </Fragment>
    <SnapContainer>
      <Content />
      <Close />
      <FullScreenButton />
    </SnapContainer>
    <ShowNote />
  </BrowserScrollSupport>
</Summary>

<style is:global>
  :root {
    --line-height: 1.5em;

    --background-color: #f6f7f9;
    --corner-color: #939495;
    --curve-color: hsl(0, 95%, 60%);
    --curve-alternative-color: transparent;
    --curve-alternative-background-color: rgba(226, 226, 226, 0.468);
    --curve-alternative-background-hover-color: hsl(0, 95%, 60%);
    --helper-color: dimgray;

    --draggable-color: hsla(0, 0%, 82%, 0.585);
    --draggable-hover-color: rgba(96, 0, 30, 0.8);
    --draggable-text-color: transparent;
    --draggable-text-hover-color: black;
    --draggable-icon-color: dimgray;
    --draggable-icon-hover-color: white;

    --dragging-color: rgba(193, 0, 61, 0.8);
    --dragging-text-color: black;
    --dragging-icon-color: white;
  }

  * {
    box-sizing: border-box;
  }

  code {
    padding: 0 5px 2px;
    background-color: lightgray;
    font-size: 1.2em;
    line-height: var(--line-height);
  }

  pre {
    color: white;
    padding: 2em;
    border-radius: 5px;
    max-width: 100%;
  }

  pre code {
    background-color: inherit;
    padding: 0;
  }

  iframe {
    max-width: 100%;
    border: 0;
  }
</style>
