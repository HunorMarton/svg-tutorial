---
import Summary from "../../layouts/Summary.astro";
import SnapContainer from "../../components/summary/SnapContainer.astro";
import Close from "../../components/common/buttons/CloseButton.astro";
import FullScreenButton from "../../components/common/buttons/FullScreenButton.astro";
import { Content } from "./_Content.mdx";
import ShowNote from "../../components/summary/ShowNote.astro";
---

<Summary>
  <SnapContainer>
    <Content />
    <Close />
    <FullScreenButton />
  </SnapContainer>
  <ShowNote />
</Summary>

<style is:global>
  :root {
    --line-height: 1.5em;
  }

  * {
    box-sizing: border-box;
  }

  code {
    padding: 0 5px 2px;
    background-color: lightgray;
    font-size: 1.2em;
    line-height: var(--line-height);
  }

  pre {
    color: white;
    padding: 2em;
    border-radius: 5px;
    max-width: 100%;
  }

  pre code {
    background-color: inherit;
    padding: 0;
  }

  iframe {
    max-width: 100%;
    border: 0;
  }
</style>
