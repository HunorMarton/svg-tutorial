---
import Summary from "../../layouts/Summary.astro";
import SnapContainer from "../../components/summary/SnapContainer.astro";
import Close from "../../components/common/buttons/CloseButton.astro";
import FullScreenButton from "../../components/common/buttons/FullScreenButton.astro";
import { Content } from "./_Content.mdx";
import ShowNote from "../../components/summary/ShowNote.astro";
---

<Summary>
  <SnapContainer>
    <Content />
    <Close />
    <FullScreenButton />
  </SnapContainer>
  <ShowNote />
</Summary>

<style is:global>
  :root {
    --line-height: 1.65em; /* var(--ec-codeLineHt)
    /* Overrides for expressive code */
    --ec-frm-frameBoxShdCssVal: none !important;
    --ec-brdWd: 0 !important;
    --ec-codeFontSize: 1em !important;
  }

  * {
    box-sizing: border-box;
  }

  code {
    padding: 0 5px 2px;
    background-color: lightgray;
    line-height: var(--line-height);
  }

  /* Overrides for expressive code */
  pre {
    min-width: 275px !important;
    border-radius: 5px !important;
  }

  .copy {
    display: none !important;
  }

  pre {
    color: white;
    padding: 2em;
    max-width: 100%;
  }

  pre code {
    background-color: inherit;
    padding: 0;
  }

  iframe {
    max-width: 100%;
    border: 0;
  }
</style>
